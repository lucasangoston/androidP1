<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/images"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/image"
        android:layout_height="200dp"
        android:background="@color/colorPrimaryDark"
        android:scaleType="centerCrop"
        android:layout_width="match_parent">
    </ImageView>

    <TextView
        android:id="@+id/nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="nom"
        android:textSize="18dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/marque"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:text="Cassegrain"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/nutriscore"
            android:layout_width="78dp"
            android:layout_height="42dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/nutriscore_e"></ImageView>
    </LinearLayout>

    <TextView
        android:id="@+id/code_barre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Codes barres: "
        android:textSize="15dp"
        android:paddingLeft="10dp"
        />
    <TextView
        android:id="@+id/quantite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantité: "
        android:textSize="15dp"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/paysList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vendu en: "
        android:textSize="15dp"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Ingrédients: "
        android:textSize="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <TextView
        android:id="@+id/substances"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Substances allergènes: "
        android:textSize="15dp"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/additifs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Additifs: "
        android:textSize="15dp"
        android:paddingLeft="10dp"/>
</LinearLayout>