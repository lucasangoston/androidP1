<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/images"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/image"
        android:layout_height="200dp"
        android:background="@color/colorPrimaryDark"
        android:scaleType="centerCrop"
        android:layout_width="match_parent">
    </ImageView>

    <TextView
        android:id="@+id/nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10sp"
        android:text="@string/nom"
        android:textSize="18dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:text="Cassegrain"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="78dp"
            android:layout_height="42dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/nutriscore_e"></ImageView>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/barcode"
        android:text="Codes barres: 3083680085304"
        android:textSize="15dp"
        android:paddingLeft="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantité 400g (280g net égoutté)"
        android:textSize="15dp"
        android:paddingLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vendu en: France, Japon, Suisse"
        android:textSize="15dp"
        android:paddingLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Ingrédients: Petits pois 66%, eau, garniture 2.8% (salade, oignon, grelot), sucre, sel, arôme naturel"
        android:textSize="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Substances allergènes: Aucune"
        android:textSize="15dp"
        android:paddingLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Additifs: Aucun"
        android:textSize="15dp"
        android:paddingLeft="10dp"/>
</LinearLayout>